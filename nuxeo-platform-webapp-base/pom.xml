  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-installed</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.restlet</groupId>
                  <artifactId>org.restlet</artifactId>
                </artifactItem>
                <artifactItem>
                  <groupId>org.restlet</groupId>
                  <artifactId>org.restlet.ext.fileupload</artifactId>
                </artifactItem>
                <artifactItem>
                  <groupId>com.noelios.restlet</groupId>
                  <artifactId>com.noelios.restlet</artifactId>
                </artifactItem>
                <artifactItem>
                  <groupId>com.noelios.restlet</groupId>
                  <artifactId>com.noelios.restlet.ext.servlet</artifactId>
                </artifactItem>
              </artifactItems>
              <outputDirectory>
                ${project.build.outputDirectory}/lib
              </outputDirectory>
            </configuration>
          </execution>
          <!--  artifacts in WEB-INF/lib, not needed in any classpath -->
          <execution>
            <id>copy-installed-webinflib</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>opensymphony</groupId>
                  <artifactId>oscache</artifactId>
                  <version>2.3.2</version>
                </artifactItem>
                <artifactItem>
                  <groupId>taglibs</groupId>
                  <artifactId>standard</artifactId>
                  <version>1.1.2</version>
                </artifactItem>
                <artifactItem>
                  <groupId>nekohtml</groupId>
                  <artifactId>nekohtml</artifactId>
                  <version>0.9.5</version>
                </artifactItem>
                <!--  used by nuxeo-theme-jsf... -->
                <artifactItem>
                  <groupId>org.dojotoolkit</groupId>
                  <artifactId>custom_rhino</artifactId>
                  <version>0.9.0</version>
                </artifactItem>
              </artifactItems>
              <outputDirectory>
                ${project.build.outputDirectory}/WEB/lib
              </outputDirectory>
            </configuration>
          </execution>

        </executions>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>net.sourceforge.maven-taglib</groupId>
        <artifactId>maven-taglib-plugin</artifactId>
        <configuration>
          <taglib.src.dir>src/main/resources/WEB</taglib.src.dir>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

